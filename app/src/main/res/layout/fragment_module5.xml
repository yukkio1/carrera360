<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Module5Fragment">

    <!-- Barra de Navegación Superior -->

    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primary"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:id="@+id/btn_Back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="@string/back_button_desc"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/title_Result4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/module_5_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingStart="16dp"/>

        <ImageView
            android:id="@+id/ivConceptMap6"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/icono"
            android:adjustViewBounds="true"/>

    </LinearLayout>


    <!-- Contenido Principal -->
    <ScrollView
        android:id="@+id/scroll_Content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Introducción -->
            <TextView
                android:id="@+id/introduction_module5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/introduction_module5"
                android:textSize="18sp"
                android:paddingBottom="16dp"/>

            <!-- Tipos de Transiciones Laborales -->
            <TextView
                android:id="@+id/transitions_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transitions_title"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="16dp"/>

            <ImageView
                android:id="@+id/transitions_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/transitions_types"
                android:adjustViewBounds="true"
                android:contentDescription="@string/transitions_image_desc"
                android:paddingBottom="16dp"/>
            <TextView android:id="@+id/imagen" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/SectionTitle" android:text="@string/imagen" android:textSize="30px"/>

            <!-- Etapas de la Evolución Profesional -->
            <TextView
                android:id="@+id/stages_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stages_title"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="16dp"/>

            <ImageView
                android:id="@+id/stages_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/stages_professional"
                android:adjustViewBounds="true"
                android:contentDescription="@string/stages_image_desc"
                android:paddingBottom="16dp"/>
             <TextView android:id="@+id/imagen2" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/SectionTitle" android:text="@string/imagen" android:textSize="30px"/>

            <!-- Señales de Cambio -->
            <TextView
                android:id="@+id/signals_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signals_title"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="16dp"/>

            <TextView
                android:id="@+id/signals_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signals_text"
                android:textSize="18sp"
                android:paddingBottom="16dp"/>
            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/oki"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="16:9"
                android:contentDescription="@string/ejemplo_practico"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView android:id="@+id/videos1" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/SectionTitle" android:text="@string/video" android:textSize="30px"/>

            <!-- Herramientas para la Transición -->
            <TextView
                android:id="@+id/tools_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tools_title"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="16dp"/>

            <ImageView
                android:id="@+id/tools_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/tools_transition"
                android:adjustViewBounds="true"
                android:contentDescription="@string/tools_image_desc"
                android:paddingBottom="16dp"/>
            <TextView android:id="@+id/imagen3" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/SectionTitle" android:text="@string/imagen" android:textSize="30px"/>

            <!-- Botón de Evaluación -->
            <Button
                android:id="@+id/btn_Responder_Module5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_responder_module5"
                android:textSize="18sp"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
