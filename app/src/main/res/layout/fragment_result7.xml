<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentResult7">
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primary"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/title_Result4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/result_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingStart="16dp"/>
        <ImageView
            android:id="@+id/ivConceptMap"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/icono"
            android:adjustViewBounds="true"/>
    </LinearLayout>
    <!-- Contenedor de resultados -->
    <ScrollView
        android:id="@+id/scroll_Content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvUserResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/results_summary"
                android:textSize="18sp"/>
            <!-- Botón para volver al módulo -->
            <Button
                android:id="@+id/btn_back_to_module7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_back_to_module7"
                android:textSize="18sp"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
