<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Fondo fijo detrás -->
    <ImageView
        android:id="@+id/questionBackground4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/cuestion_fondo"
        android:alpha="0.7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Barra de progreso -->
        <ProgressBar
            android:id="@+id/progressBar4"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="5"
            android:progress="3"
            android:indeterminate="false"
            android:progressDrawable="@drawable/progress_style"/>

        <TextView
            android:id="@+id/questionText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pregunta4"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:elevation="2dp"/>

        <RadioGroup
            android:id="@+id/radioGroup4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:elevation="2dp">

            <!-- Opción 1 -->
            <RadioButton
                android:id="@+id/option1_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_option"
                android:padding="20dp"
                android:text="@string/option1_4_title"/>
            <TextView
                android:id="@+id/option1_4_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option1_4_desc"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:padding="10dp"/>

            <!-- Opción 2 -->
            <RadioButton
                android:id="@+id/option2_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_option"
                android:padding="20dp"
                android:text="@string/option2_4_title"/>
            <TextView
                android:id="@+id/option2_4_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option2_4_desc"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:padding="10dp"/>

            <!-- Opción 3 -->
            <RadioButton
                android:id="@+id/option3_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_option"
                android:padding="20dp"
                android:text="@string/option3_4_title"/>
            <TextView
                android:id="@+id/option3_4_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option3_4_desc"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:padding="10dp"/>
        </RadioGroup>

        <!-- Botón "Siguiente" -->
        <Button
            android:id="@+id/nextButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next_button_text"
            android:background="@drawable/next_button"
            android:textColor="@color/button_text_color"
            android:layout_marginTop="40dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:visibility="gone"/> <!-- Solo aparece al marcar una opción -->

    </LinearLayout>
</FrameLayout>
